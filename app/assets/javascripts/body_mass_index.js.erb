$(document).ready( function(){
  $("#bmi_form").on("ajax:success", function(evt, data, status, xhr){
      var res = data.resultado;
      var bmi = data.bmi;
      $("#bmi-result").html(res);
      $("#bmi-bmi").html("BMI = " + bmi);
  });
});
