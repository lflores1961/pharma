<div class="depot_form">

  <%= form_for(user) do |f| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <fieldset>
    <legend>Introduzca los datos del usuario</legend>

      <div class="field">
        <%= f.label :name, 'Nombre:' %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :email, 'Email: ' %>
        <%= f.text_field :email %>
      </div>

      <div class="field">
        <%= f.label :password, 'Contraseña/password:' %>
        <%= f.password_field :password %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, 'Confirme contraseña:' %>
        <%= f.password_field :password_confirmation %>
      </div>

      <div class="submit">
        <%= f.submit 'Guardar datos' %>
      </div>
    </fieldset>

  <% end %>
</div>
