<!DOCTYPE html>
<html>
  <head>
    <title>Farmacia ZI</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag %>
  </head>

  <body class='<%= controller.controller_name %>'>
    <div id="banner">
      <%= image_tag 'logoPharma.png', size: "130x65", alt: 'Nutri Pharma' %>
      <span class="title"><%= @page_title %></span>
    </div>
    <div id="columns">
      <div id="side">
        <div id="cart">
          <% if @cart %>
            <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
              <%= render @cart %>
            <% end %>
          <% end %>
        </div>

        <ul>
          <li><%= link_to 'Inicio', store_index_path %></li>
          <li><a href="#">Preguntas frecuentes</a></li>
          <li><a href="#">Noticias</a></li>
          <li><a href="#">Contacto</a></li>
        </ul>

        <% if session[:user_id] %>
          <p><%= User.find(session[:user_id]).email %></p>
          <ul>
            <li><%= link_to 'Ordenes',    orders_path   %></li>
            <li><%= link_to 'Productos',  products_path %></li>
            <li><%= link_to 'Usuarios',   users_path    %></li>
            <li><%= link_to 'Contenido',   posts_path    %></li>
          </ul>
          <%= button_to 'Terminar sesión', logout_path, method: :delete %>
        <% else %>
          <%= link_to(image_tag("TardisIcon.png", size: "50", alt: 'Iniciar Sesión'), login_path, id: "tardis") %>
        <% end %>

      </div>
      <div id="main">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
