<% unless cart.line_items.empty? %>
<h2>Su canasta con sus artículos...</h2>

<table>
  <%= render(cart.line_items) %>

  <tr class="total_line">
    <td colspan="2">Total:</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
  </tr>
</table>

<% unless @hide_checkout_button == true %>
  <%= button_to 'Pasar a la caja', new_order_path, method: :get %>
<% end %>

<%= button_to 'Vaciar la canasta', cart, method: :delete,
              data: {confirm: '¿Está seguro(a)?' } %>

<% end %>
